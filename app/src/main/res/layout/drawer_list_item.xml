<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:background="@drawable/background_selector"
    android:clickable="false"
    android:focusable="false" >

    <TextView
        android:id="@+id/light_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/light_status"
        android:layout_toStartOf="@+id/light_status"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="center_vertical"
        style="@style/Theme.WifiLight.TextView.DrawerLabel"
        android:src="@string/test_string" />

    <ImageView
        android:id="@+id/light_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/default_margin"
        android:layout_gravity="center"
        android:src="@drawable/ic_action_tick"
        android:contentDescription="Light Status" />

</RelativeLayout>