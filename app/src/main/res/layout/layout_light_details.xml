<?xml version="1.0" encoding="utf-8"?>
<merge 
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/fragment_details">

    <TextView
        android:id="@+id/light_details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/background_secondary"
        android:text="@string/label_light_details"
        style="@style/Theme.WifiLight.TextView.Label2" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/light_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/light_details_label"
        android:padding="@dimen/default_half_margin"
        android:background="@color/background_secondary"
        grid:columnCount="@integer/light_details_column_count"
        grid:rowCount="@integer/light_details_row_count"
        grid:alignmentMode="alignBounds">

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="0"
            grid:layout_rowSpan="1"
            grid:layout_column="0"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            android:text="@string/label_light_name"
            style="@style/Theme.WifiLight.TextView.Label2"/>

        <TextView
            android:id="@+id/name_textview"
            grid:layout_row="0"
            grid:layout_rowSpan="1"
            grid:layout_column="1"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2" />

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="1"
            grid:layout_rowSpan="1"
            grid:layout_column="0"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"
            android:text="@string/label_light_id" />

        <TextView
            android:id="@+id/id_textview"
            grid:layout_row="1"
            grid:layout_rowSpan="1"
            grid:layout_column="1"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"/>

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="2"
            grid:layout_rowSpan="1"
            grid:layout_column="2"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"
            android:text="@string/label_light_hue" />

        <TextView
            android:id="@+id/hue_textview"
            grid:layout_row="2"
            grid:layout_rowSpan="1"
            grid:layout_column="3"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"/>

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="0"
            grid:layout_rowSpan="1"
            grid:layout_column="2"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"
            android:text="@string/label_light_saturation" />

        <TextView
            android:id="@+id/saturation_textview"
            grid:layout_row="0"
            grid:layout_rowSpan="1"
            grid:layout_column="3"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"/>

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="1"
            grid:layout_rowSpan="1"
            grid:layout_column="2"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"
            android:text="@string/label_light_brightness"/>

        <TextView
            android:id="@+id/brightness_textview"
            grid:layout_row="1"
            grid:layout_rowSpan="1"
            grid:layout_column="3"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2" />

        <TextView
            android:layout_width="wrap_content"
            grid:layout_row="3"
            grid:layout_rowSpan="1"
            grid:layout_column="2"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"
            android:text="@string/label_light_kelvin"/>

        <TextView
            android:id="@+id/kelvin_textview"
            grid:layout_row="3"
            grid:layout_rowSpan="1"
            grid:layout_column="3"
            grid:layout_columnSpan="1"
            grid:layout_rowWeight="1"
            grid:layout_columnWeight="1"
            style="@style/Theme.WifiLight.TextView.Label2"/>
    </android.support.v7.widget.GridLayout>
</merge>