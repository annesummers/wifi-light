<resources>
    <style name="Theme.WifiLight.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Theme.WifiLight.ActionBar.Popup" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:colorBackground">@color/primary</item>
        <item name="android:itemTextAppearance">@style/Theme.WifiLight.Toolbar.PopupTextAppearance</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Theme.WifiLight.Toolbar.PopupTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiLight.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_selected</item>
        <item name="tabIndicatorHeight">@dimen/tab_height</item>
        <item name="android:background">@drawable/tab_selector</item>
        <item name="tabTextAppearance">@style/Theme.WifiLight.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_tertiary</item>
    </style>

    <style name="Theme.WifiLight.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="Theme.WifiLight.TextView.Label1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiLight.TextView.Label2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:padding">@dimen/label_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.WifiLight.TextView.GroupTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.WifiLight.TextView.ItemTitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.WifiLight.TextView.DrawerLabel" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/default_half_margin</item>
        <item name="android:layout_marginTop">@dimen/default_half_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textColor">@drawable/drawer_text_selector</item>
    </style>

    <style name="Theme.WifiLight.TextView.Header" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Theme.WifiLight.Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiLight.Button.Transparent" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@drawable/button_text_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
