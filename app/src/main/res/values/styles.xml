<resources>

    <style name="Theme.WifiLight.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.WifiLight.TextView.Label1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Theme.WifiLight.TextView.Label2" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:padding">@dimen/label_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.WifiLight.TextView.DrawerLabel" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@drawable/color_selector</item>
    </style>

    <style name="Theme.WifiLight.TextView.Header" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">50sp</item>
    </style>
</resources>
